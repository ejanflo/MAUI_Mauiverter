<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mauiverter.MVVM.Views.MenuView"
             Title="MenuView"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <Color x:Key="AppColor1">#10002B</Color>
        <Color x:Key="AppColor2">#240046</Color>
        <Color x:Key="AppColor3">#3C096C</Color>
        <Color x:Key="AppColor4">#5A189A</Color>
        <Color x:Key="TextColor">White</Color>
    </ContentPage.Resources>
    <Grid ColumnDefinitions="0.33*, 0.33*, 0.33*" RowDefinitions="0.1*, 0.3*, 0.3*, 0.3*">
        <Label Grid.ColumnSpan="3" Background="{StaticResource AppColor4}" FontAttributes="Bold" FontSize="Large" HorizontalTextAlignment="Center" Text="Mauiverter" TextColor="{StaticResource TextColor}" VerticalTextAlignment="Center" />
        
        <!--#region Information -->
        <Grid Grid.Row="1" Padding="15" RowDefinitions="0.7*, 0.3*" BackgroundColor="{StaticResource AppColor1}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="icons" Glyph="&#xF0A0;" Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Information" VerticalTextAlignment="Center" TextColor="{StaticResource TextColor}" />
        </Grid>
        <!--#endregion-->
        
        <!--#region Volume -->
        <Grid Grid.Row="1" Grid.Column="1" Padding="15" RowDefinitions="0.7*, 0.3*" BackgroundColor="{StaticResource AppColor2}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="icons" Glyph="&#xF1B2;" Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Volume" VerticalTextAlignment="Center" TextColor="{StaticResource TextColor}" />
        </Grid>
        <!--#endregion-->
        
        <!--#region Length -->
        <Grid Grid.Row="1" Grid.Column="2" Padding="15" RowDefinitions="0.7*, 0.3*" BackgroundColor="{StaticResource AppColor3}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="icons" Glyph="&#xF044;" Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Length" VerticalTextAlignment="Center" TextColor="{StaticResource TextColor}" />
        </Grid>
        <!--#endregion-->
        
        <!--#region Mass -->
        <Grid Grid.Row="2" Grid.Column="0" Padding="15" RowDefinitions="0.7*, 0.3*" BackgroundColor="{StaticResource AppColor2}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="icons" Glyph="&#xF24E;" Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Mass" VerticalTextAlignment="Center" TextColor="{StaticResource TextColor}" />
        </Grid>
        <!--#endregion-->
        
        <!--#region Temperature -->
        <Grid Grid.Row="2" Grid.Column="1" Padding="15" RowDefinitions="0.7*, 0.3*" BackgroundColor="{StaticResource AppColor3}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="icons" Glyph="&#xE803;" Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Temperature" VerticalTextAlignment="Center" TextColor="{StaticResource TextColor}" />
        </Grid>
        <!--#endregion-->
        
        <!--#region Energy -->
        <Grid Grid.Row="2" Grid.Column="2" Padding="15" RowDefinitions="0.7*, 0.3*" BackgroundColor="{StaticResource AppColor1}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="icons" Glyph="&#xF525;" Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Energy" VerticalTextAlignment="Center" TextColor="{StaticResource TextColor}" />
        </Grid>
        <!--#endregion-->
        
        <!--#region Area -->
        <Grid Grid.Row="3" Grid.Column="0" Padding="15" RowDefinitions="0.7*, 0.3*" BackgroundColor="{StaticResource AppColor3}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="icons" Glyph="&#xF1FE;" Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Area" VerticalTextAlignment="Center" TextColor="{StaticResource TextColor}" />
        </Grid>
        <!--#endregion-->
        
        <!--#region Speed -->
        <Grid Grid.Row="3" Grid.Column="1" Padding="15" RowDefinitions="0.7*, 0.3*" BackgroundColor="{StaticResource AppColor2}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="icons" Glyph="&#xE82A;" Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Speed" VerticalTextAlignment="Center" TextColor="{StaticResource TextColor}" />
        </Grid>
        <!--#endregion-->
        
        <!--#region Duration -->
        <Grid Grid.Row="3" Grid.Column="2" Padding="15" RowDefinitions="0.7*, 0.3*" BackgroundColor="{StaticResource AppColor1}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="icons" Glyph="&#xE800;" Size="50" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Duration" VerticalTextAlignment="Center" TextColor="{StaticResource TextColor}" />
        </Grid>
        <!--#endregion-->
    </Grid>
</ContentPage>